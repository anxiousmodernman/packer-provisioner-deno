{
  "variables": {
      "local_deno_bin": "{{ env `HOME` }}/Code/Deno/deno"
  },
  "builders": [
    {
      "type": "docker",
      "image": "centos",
      "export_path": "image.tar"
    }
  ],
  "provisioners": [
    {
      "type": "deno",
      "local_deno_bin": "{{ user `local_deno_bin` }}",
      "scripts": [
        "deno-scripts/makeuser.ts",
        "deno-scripts/install-nginx-centos.ts"
      ]
    }
  ],
  "post-processors": [
    {
      "type": "docker-import",
      "repository": "anxiousmodernman/packer-provisioner-deno",
      "tag": "centos-0.1"
    }
  ]
}
