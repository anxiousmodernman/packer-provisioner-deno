{
  "_comment": "override local_deno_bin at the command line with your own path",
  "variables": {
      "local_deno_bin": "{{ env `HOME` }}/Code/Deno/deno"
  },
  "builders": [
    {
      "type": "digitalocean",
      "name": "do-ubuntu",
      "image": "ubuntu-18-04-x64",
      "region": "nyc3",
      "size": "s-2vcpu-2gb",
      "ssh_username": "root"
    },
    {
      "type": "digitalocean",
      "name": "do-centos",
      "image": "centos-7-x64",
      "region": "nyc3",
      "size": "s-2vcpu-2gb",
      "ssh_username": "root"
    }
  ],
  "provisioners": [
    {
      "type": "deno",
      "skip_provision": false,
      "local_deno_bin": "{{ user `local_deno_bin` }}",
      "remote_folder": "/root/packer-deno",
      "scripts": [
        "deno-scripts/makeuser.ts",
        "deno-scripts/install-nginx.ts"
      ]
    }
  ]
}
